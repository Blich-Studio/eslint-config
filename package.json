{
  "name": "@blich-studio/eslint-config",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./prettier": {
      "types": "./dist/prettier.d.ts",
      "default": "./dist/prettier.js"
    },
    "./prettier.config": "./dist/prettier.js",
    "./prettier.config.js": "./dist/prettier.js"
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "postinstall": "bun run build"
  },
  "dependencies": {
    "@eslint/js": "^9.39.0",
    "@typescript-eslint/utils": "^8.48.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "globals": "^15.9.0",
    "prettier": "^3.3.3",
    "typescript-eslint": "^8.48.0"
  },
  "peerDependencies": {
    "eslint": "^9.39.0",
    "prettier": "^3.3.3"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "eslint": "^9.39.0",
    "typescript": "^5.8.3"
  }
}
